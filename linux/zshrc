# Get the AWS instance name if available (needs to be before initializing prezto)
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/linux/awsutils/instance-name-tag.sh" ]]; then
    source "${ZDOTDIR:-$HOME}/.zprezto/linux/awsutils/instance-name-tag.sh"
fi

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...

# Iterm shell integration
test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

# Custom aliases
alias updatezprezto='git pull & git submodule update --init --recursive'

# Configure bc-tools
if [ -d ~/bc-tools ]; then
  export BCTOOLSDIR=~/bc-tools
  . $BCTOOLSDIR/_bc-set-env.sh
  ~/bc-tools/bc-safe-ops.sh info
fi
